@model Assignment

<div class="container">
    <h2>Ödev Detayları</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Son Teslim: @Model.DueDate.ToShortDateString()</li>
                <li class="list-group-item">Durum: @Model.Status</li>
                <li class="list-group-item">Oluşturulma: @Model.CreatedDate.ToShortDateString()</li>
            </ul>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>