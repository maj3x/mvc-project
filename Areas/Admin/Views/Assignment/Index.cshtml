@model IEnumerable<Assignment>

<script>
function deleteAssignment(id) {
    if (confirm('Bu ödevi silmek istediğinizden emin misiniz?')) {
        $.ajax({
            url: '/Admin/Assignment/Delete',
            type: 'POST',
            data: { id: id },
            success: function(result) {
                if (result.success) {
                    $('#row-' + id).remove();
                } else {
                    alert('Silme işlemi başarısız oldu.');
                }
            }
        });
    }
}
</script>

<div class="container">
    <h2>Ödev Listesi</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Ödev Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Son Teslim Tarihi</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.DueDate.ToShortDateString()</td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>