@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-4 mb-3">Hata</h1>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mb-3">
                            <strong>Hata ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <p class="lead mb-4">
                        @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
                        {
                            <strong>Geliştirme ortamında bir hata oluştu.</strong>
                        }
                        else
                        {
                            <strong>Beklenmeyen bir hata oluştu.</strong>
                        }
                    </p>

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Git
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
