@model UserRoleModel
@{
    ViewData["Title"] = "Kullanıcı Rolleri";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Kullanıcı Rolleri</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Users">Kullanıcılar</a></li>
        <li class="breadcrumb-item active">@Model.UserName</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-tag me-1"></i>
            Kullanıcı Rolleri - @Model.UserName
        </div>
        <div class="card-body">
            <form asp-action="UserRoles" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="UserName" />
                
                <div class="row">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                <input class="form-check-input" type="checkbox" 
                                       asp-for="@Model.Roles[i].IsSelected" />
                                <label class="form-check-label">
                                    @Model.Roles[i].RoleName
                                </label>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
